---
import MainLayut from '../layouts/MainLayout.astro'

// Se traen lso datos de la API
const response = await fetch('https://rickandmortyapi.com/api/character')
const data = await response.json()
const characters = data.results
---

<MainLayut>
    <div class="container bg-slate-800 m-auto p-4 mt-4 rounded-md">
        <h1 class="mb-4">Utilizando la API de Rick and Morty</h1>

        <div class="flex flex-wrap gap-8 place-content-between">
            {
                // Mostramos los datos de la API
                characters.map( character => (
                    <div>
                        <p>{character.name}</p>
                        <img src={character.image} alt="" />
                    </div>
                ))
            }
        </div>
    </div>
</MainLayut>